{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "public/assets/**/*", "watchAssets": true },
      {
        "include": "public/templates/**/*.hbs"
      }
    ],
    "watchAssets": true
  }
}
